<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gzrz_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context="com.zxt.zxt_phone.view.zwfw.GzrzInfoActivity">

    <com.zxt.zxt_phone.view.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_tab_height"/>

    <com.zxt.zxt_phone.view.widget.TextViewLayout
        android:id="@+id/quyu_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:id="@+id/diqu_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="所属区域："
            android:textSize="14sp"
            android:id="@+id/textView" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="请选择区域"
            android:gravity="center"
            android:drawableRight="@drawable/right"
            android:layout_marginRight="15dp"
            android:id="@+id/tv_diqu" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/gainsboro" />
    <LinearLayout
        android:id="@+id/wgqy_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:text="所属网格："/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="选择网格"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/right"
            android:id="@+id/tv_wgqy" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/gainsboro" />
    <LinearLayout
        android:id="@+id/name_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:text="网格员："/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="填写或选择姓名"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/right"
            android:id="@+id/tv_name" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/gainsboro" />
    <LinearLayout
        android:id="@+id/end_time_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:text="编辑时间："/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="必填项"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/right"
            android:id="@+id/tv_end_time" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/gainsboro" />
    <LinearLayout
        android:id="@+id/biao_ti_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="14sp"
            android:text="标题："/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="必填项"
            android:gravity="center"
            android:layout_marginRight="15dp"
            android:id="@+id/tv_biaoti" />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1.0dip"
        android:background="@color/gainsboro" />


    <TextView
        android:id="@+id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
