<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sqmj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pasq_right_bg"
    android:orientation="vertical"
    tools:context="com.zxt.zxt_phone.view.zwfw.pasq.SqmjActivity">


    <com.zxt.zxt_phone.view.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_tab_height" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.1"
        android:orientation="vertical">

        <TextView
             android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_50"
            android:text="火灾报警：119"
            android:textSize="@dimen/sp_18"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:textSize="@dimen/sp_18"
            android:text="火灾报警：119" />

        <TextView
            android:id="@+id/tv_jwt"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="火灾报警：119" />
        <TextView
            android:id="@+id/tv_bj"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"
            android:text="火灾报警：119" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/px_20"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_right_title2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="常用报警电话"
            android:textColor="@color/red"
            android:padding="@dimen/dp_5"
            android:textSize="@dimen/sp_25" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/ll_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_huojing"
                    style="@style/sqaq_style"
                    android:text="火灾报警：119" />

                <TextView
                    android:id="@+id/tv_zhian"
                    style="@style/sqaq_style"
                    android:text="治安报警：110"

                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_1"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_yiliao"
                    style="@style/sqaq_style"
                    android:text="医疗急救：120" />

                <TextView
                    android:id="@+id/tv_jiaotong"
                    style="@style/sqaq_style"
                    android:text="交通事故：122" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ll_2"

                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_wangluo"
                    style="@style/sqaq_style"
                    android:text="网络举报电话：12377" />

                <TextView
                    android:id="@+id/tv_chaxun"
                    style="@style/sqaq_style"
                    android:text="电话查询：114" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>

