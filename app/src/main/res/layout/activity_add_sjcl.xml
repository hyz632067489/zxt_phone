<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_sjcl"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zxt.zxt_phone.view.zwfw.wggl.AddSjclActivity">

    <com.zxt.zxt_phone.view.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_tab_height" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="标         题:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_title"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:layout_weight="4"
                    android:background="@drawable/shape_gary_input_bg"
                    android:hint="请输入标题"
                    android:paddingLeft="@dimen/px_30"
                    android:paddingRight="@dimen/px_30"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>


            <LinearLayout
                android:id="@+id/layout_type"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="事件类型:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:layout_weight="4"
                    android:background="@drawable/shape_gary_input_bg"
                    android:drawableRight="@drawable/to_bottom"
                    android:gravity="center_vertical"
                    android:hint="请选择类型"
                    android:paddingLeft="@dimen/px_30"
                    android:paddingRight="@dimen/px_10"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_scale"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="事件等级:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_scale"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:layout_weight="4"
                    android:background="@drawable/shape_gary_input_bg"
                    android:drawableRight="@drawable/to_bottom"
                    android:gravity="center_vertical"
                    android:hint="请选择等级"
                    android:paddingLeft="@dimen/px_30"
                    android:paddingRight="@dimen/px_10"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>
            <LinearLayout
                android:id="@+id/layout_come"
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="事件来源:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_come"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:layout_weight="4"
                    android:background="@drawable/shape_gary_input_bg"
                    android:drawableRight="@drawable/to_bottom"
                    android:gravity="center_vertical"
                    android:hint="请选择来源"
                    android:paddingLeft="@dimen/px_30"
                    android:paddingRight="@dimen/px_10"
                    android:textColor="@color/black"
                    android:textSize="16sp" />


            </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_80"
                android:layout_marginTop="@dimen/px_30"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="@dimen/px_200"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="重点督办:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/px_30"
                    android:orientation="horizontal">
                    <CheckBox
                        android:id="@+id/chb_1"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="是"/>
                    <CheckBox
                        android:id="@+id/chb_2"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="否"/>


                    </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/px_50"
                android:layout_marginTop="@dimen/px_30"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_80">
                    <TextView
                        android:layout_width="@dimen/px_200"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="添加图片:"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/iv_img"
                        android:layout_width="@dimen/px_200"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:background="@drawable/shape_gary_input_bg"
                        android:text="添加图片"
                        android:layout_marginLeft="@dimen/px_30"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <com.lzy.ninegrid.NineGridView
                    android:id="@+id/nineGrid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingTop="6dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/px_30">

                <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="@dimen/px_200"
                    android:layout_height="wrap_content"

                    android:text="内         容:"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/et_content"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/px_400"
                    android:layout_marginLeft="@dimen/px_30"
                    android:layout_marginRight="@dimen/px_30"
                    android:layout_toLeftOf="@+id/tv_p"
                    android:layout_toRightOf="@+id/tv_content"
                    android:background="@drawable/shape_gary_input_bg"
                    android:gravity="clip_horizontal"
                    android:hint="请输入要提交的内容"
                    android:inputType="textMultiLine"
                    android:maxLines="20"
                    android:paddingLeft="@dimen/px_30"
                    android:paddingTop="@dimen/px_10"
                    android:text=""
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_120"
                android:layout_marginTop="@dimen/px_40"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btn_tongyi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/px_300"
                    android:layout_marginRight="@dimen/px_300"
                    android:layout_weight="1"
                    android:text="提\t\t\t\t交"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
