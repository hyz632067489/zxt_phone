<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_zyzfw"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zxt.zxt_phone.view.zwfw.dqfc.ZyzfwActivity">

    <com.zxt.zxt_phone.view.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_tab_height"/>


    <RadioGroup
        android:id="@+id/rd_g"
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_tab_height"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/rb_1"
            style="@style/radioButton"
            android:checked="true"
            android:text="志愿资讯"/>

        <RadioButton
            android:id="@+id/rb_2"
            style="@style/radioButton"
            android:text="志愿活动"/>

    </RadioGroup>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc"
        />
    <com.zxt.zxt_phone.view.customview.HomeGridView
        android:id="@+id/grid_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:fadingEdge="none"
        android:horizontalSpacing="2.0dp"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:verticalSpacing="2.0dp"/>
    <include layout="@layout/process_bar" />
</LinearLayout>
