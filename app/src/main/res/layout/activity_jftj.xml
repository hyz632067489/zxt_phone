<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_jftj"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zxt.zxt_phone.view.wyfw.JftjActivity">

    <com.zxt.zxt_phone.view.widget.TitleLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/action_tab_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/px_300"
        android:background="@color/new_text"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="纠纷调解进度调查"
            android:textColor="@color/black"
            android:textSize="@dimen/px_50" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/search_bg_color"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/et_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cxgs_yjfk_search_input"
                android:hint="请输入ID号"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/maop_text_color"
                android:textSize="13sp" />

            <EditText
                android:id="@+id/et_phone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:background="@drawable/cxgs_yjfk_search_input"
                android:hint="请输入手机号码"
                android:maxLength="11"
                android:numeric="integer"
                android:paddingLeft="5dp"
                android:singleLine="true"
                android:textColor="@color/maop_text_color"
                android:textSize="13sp" />


        </LinearLayout>


        <TextView
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/cxgs_yjfk_search_ico"
            android:gravity="center_horizontal"
            android:padding="@dimen/dp_4"
            android:paddingTop="10dp"
            android:text="查询"
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>
    <TextView
        android:id="@+id/countent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/px_30"
        android:text="查询"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:visibility="gone"/>
</LinearLayout>
